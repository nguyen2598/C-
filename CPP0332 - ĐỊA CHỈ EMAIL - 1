#include<bits/stdc++.h>
using namespace std;

int main(){
string s;
getline(cin,s);
int i=0;
string a[100];
for(i=0;i<s.size();i++){
      if(s[i]>=65&&s[i]<=90)
         s[i]=s[i]+32;
   }
//cout<<s;
stringstream ss(s);
string token;
i=0;
while(ss>>token){
	a[i]=token;
	i++;
}
cout<<a[i-1];
for(int j=0;j<i-1;j++)cout<<a[j][0];
	cout<<"@ptit.edu.vn";

}

